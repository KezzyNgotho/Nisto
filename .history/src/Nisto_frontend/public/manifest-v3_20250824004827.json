{
  "manifest_version": 3,
  "name": "Nesto - IC Wallet & Finance",
  "version": "1.0.0",
  "description": "AI-Powered Social Finance Platform for the Internet Computer - Manage your IC identity, sign transactions, and access DeFi tools",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://*.ic0.app/*",
    "https://*.localhost/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ic0.app/*",
        "https://*.localhost/*",
        "http://localhost/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nesto - IC Wallet",
    "default_icon": {
      "16": "icons/icon-16x16.svg",
      "32": "icons/icon-32x32.svg",
      "48": "icons/icon-48x48.svg",
      "128": "icons/icon-128x128.svg"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.svg",
    "32": "icons/icon-32x32.svg",
    "48": "icons/icon-48x48.svg",
    "128": "icons/icon-128x128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "https://*.ic0.app/*",
        "https://*.localhost/*",
        "http://localhost/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
